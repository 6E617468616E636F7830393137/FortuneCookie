@model IEnumerable<ClickCounterApp.Entities.Fortune.Messages>

@{
    ViewBag.Title = "Fortune Seeker";
}

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Created Date
        </th>
        <th>
            Author
        </th>
        <th>
            Message
        </th>
        <th>
            Lucky Numbers
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuckyNumbers)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })

            </td>
        </tr>
    }
</table>


